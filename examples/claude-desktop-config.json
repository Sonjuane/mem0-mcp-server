{
    "mcpServers": {
        "mem0-nodejs": {
            "command": "node",
            "args": [
                "/path/to/mem0_mcp_server_nodejs/src/main.js"
            ],
            "env": {
                "TRANSPORT": "stdio",
                "STORAGE_PROVIDER": "local",
                "LOCAL_STORAGE_DIR": ".Mem0-Files",
                "DEFAULT_USER_ID": "claude-user",
                "DEBUG": "false"
            },
            "description": "Mem0 MCP Server - Long-term memory storage and retrieval"
        }
    }
}